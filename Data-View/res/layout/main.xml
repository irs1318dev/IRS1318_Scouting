<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@+id/LinearLayout" android:background="#5200cc">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:orientation="horizontal">
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="All"
                    android:id="@+id/All" android:onClick="filter" android:textSize="20dp" android:textColor="#ffff4d"
                    android:checked="true"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grab"
                    android:id="@+id/Grab" android:onClick="filter" android:textSize="20dp"
                    android:textColor="#ffff4d"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drop"
                    android:id="@+id/Drop" android:onClick="filter" android:textSize="20dp"
                    android:textColor="#ffff4d"/>
            <Space
                    android:layout_width="20px"
                    android:layout_height="20px"
            />
        </RadioGroup>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Undo"
                android:id="@+id/Undo" android:onClick="undo" android:textSize="20dp" android:textColor="#ffff4d"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deselect"
                android:id="@+id/Deselect" android:onClick="deselect" android:textSize="20dp"
                android:textColor="#ffff4d"/>
    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/MainLayout"/>
</LinearLayout>

