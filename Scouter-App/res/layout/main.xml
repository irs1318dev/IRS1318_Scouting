<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".Input" android:id="@+id/Title">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainLayout">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/teamNum" android:text="1318" android:singleLine="true"
                android:gravity="center_horizontal"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/startLayout">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:textSize="25dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect"
                android:id="@+id/button" android:onClick="connect"
                android:textSize="25dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don&apos;t Connect"
                android:id="@+id/button2" android:onClick="noConnect"
                android:textSize="25dp"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;--"
        android:id="@+id/last"
        android:layout_below="@+id/mainLayout"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:onClick="pageSwap"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-->"
        android:id="@+id/next"
        android:layout_below="@+id/mainLayout"
        android:layout_alignParentEnd="true"
        android:onClick="pageSwap"
        android:visibility="invisible"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Undo"
        android:id="@+id/undo"
        android:layout_below="@+id/mainLayout"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:onClick="undo"/>

</RelativeLayout>
