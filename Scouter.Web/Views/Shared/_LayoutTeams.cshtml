<!DOCTYPE html>

@if (ViewBag.IncludeManifest != null && ViewBag.IncludeManifest)
{
    <text>
        <html lang="en" manifest="/teams/manifest">
    </text>
}
else
{
    <text>
        <html lang="en">
    </text>
}
<head>
    <meta charset="utf-8" />
    <meta http-equiv='cache-control' content='no-cache'>
    <meta http-equiv='expires' content='0'>
    <meta http-equiv='pragma' content='no-cache'>
    <meta http-equiv="X-UA-Compatible" content="IE=edge;chrome=1"/>
    <title>@ViewBag.Title - Scouter</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)
</head>
<body class="container">
	<header>
		<div class="row">
			<div class="col-xs-4">
				<img alt="Scouter" onclick="$(function () { $('#nav').collapse('show'); setTimeout('$(function () { $(\'#nav\').collapse(\'hide\'); })', 1500);})" title="Scouter" src="/images/scouter-logo.png" />
			</div>
			<div id="nav" class="col-xs-2 panel-collapse collapse">
				<a href="/">
					<div class="row" style="background-color:purple; color:white">
						<br />
						Home<br />
						<br />
					</div>
				</a>
			</div>
		</div>
	</header>
    <article>
        @RenderBody()
    </article>
    <footer>
        <small>&copy; @DateTime.Now.Year Scouter by Issaquah Robotics Society</small>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/teams")
    @Scripts.Render("~/bundles/offline")

    @RenderSection("breakout", required: false)
    @RenderSection("scripts", required: false)
</body>
</html>
