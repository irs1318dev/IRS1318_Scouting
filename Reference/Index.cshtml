@model Scouter.Web.ViewModels.ScouterIndexViewModel

@{
    ViewBag.Title = "Scouting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <script>
        $(function (){
            //
            // CLIENT SIDE VIEWMODEL
            //
            var ViewModel = function ()
            {
            	this.red1 = function ()
            	{
            		document.location = '/Scouting/Auto/1';
            	}
            	this.red2 = function ()
            	{
            		document.location = '/Scouting/Auto/2';
            	}
            	this.red3 = function ()
            	{
            		document.location = '/Scouting/Auto/3';
            	}
            	this.redh = function ()
            	{
            	    document.location = '/Scouting/Human/7';
            	}
            	this.blue1 = function ()
            	{
            		document.location = '/Scouting/Auto/4';
            	}
            	this.blue2 = function ()
            	{
            		document.location = '/Scouting/Auto/5';
            	}
            	this.blue3 = function ()
            	{
            		document.location = '/Scouting/Auto/6';
            	}
            	this.blueh = function ()
            	{
            	    document.location = '/Scouting/Human/8';
            	}
            	this.manager = function()
            	{
            		document.location = '/Scouting/Admin';
            	}
            }

            var vm = new ViewModel();
            ko.applyBindings(vm);
        })
    </script>
}


<div class="btn-group btn-group-justified">
    <div class="btn-group">
        <button data-bind="click: red1" type="button" class="btn btn-danger">Red 1</button>
    </div>
    <div class="btn-group">
			<button data-bind="click: red2" type="button" class="btn btn-danger">Red 2</button>
    </div>
    <div class="btn-group">
        <button data-bind="click: red3" type="button" class="btn btn-danger">Red 3</button>
    </div>
    <div class="btn-group">
        <button data-bind="click: redh" type="button" class="btn btn-danger">Human</button>
    </div>
</div>

<div class="btn-group btn-group-justified">
    <div class="btn-group">
        <button data-bind="click: blue1" type="button" class="btn btn-primary">Blue 1</button>
    </div>
    <div class="btn-group">
        <button data-bind="click: blue2" type="button" class="btn btn-primary cmd">Blue 2</button>
    </div>
    <div class="btn-group">
        <button data-bind="click: blue3" type="button" class="btn btn-primary cmd">Blue 3</button>
    </div>
    <div class="btn-group">
        <button data-bind="click: blueh" type="button" class="btn btn-primary cmd">Human</button>
    </div>
</div>
<div class="btn-group btn-group-justified">
	<div class="btn-group">
		<button data-bind="click: manager" type="button" class="btn btn-warning cmd">Manager</button>
	</div>
</div>